<% layout('layouts/boilerplate') %>


    <div class="container mt-5">
        <div class="row justify-content-start">
            <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
                <div class="card shadow">
                    <img src="https://images.unsplash.com/photo-1455763916899-e8b50eca9967?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=870&q=80"
                        alt="" class="card-img-top">
                    <div class="card-body">
                        <h5 class="card-title">User Login</h5>
                        <form action="/login" method="POST" class="validatedForm" novalidate>
                            <div class="mb-3">
                                <label for="username" class="form-label">username</label>
                                <input type="text" name="username" id="username" class="form-control" autofocus
                                    required>
                                <div class="valid-feedback">Looks Good!</div>
                            </div>
                            <div class="mb-3">
                                <label for="password" class="form-label">password</label>
                                <input type="password" name="password" id="password" class="form-control" required>
                                <div class="valid-feedback">Looks Good!</div>
                            </div>
                            <div class="d-grid">
                                <button class="btn btn-primary">Login</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

    </div>